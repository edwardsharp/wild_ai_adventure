// Folder-specific settings
//
// For a full list of overridable settings, and general information on folder-specific settings,
// see the documentation: https://zed.dev/docs/configuring-zed#settings-files
{
  "json.schemas": [
    { "fileMatch": ["assets/config/config.jsonc"], "url": "./config.schema.json" }
  ],

  "format_on_save": "on",
  "languages": {
    "JSON": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "/Users/edward/.cargo/bin/dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "JSONC": {
      "format_on_save": "on",
      "formatter": {
        "external": {
          "command": "/Users/edward/.cargo/bin/dprint",
          "arguments": ["fmt", "--stdin", "{buffer_path}"]
        }
      }
    },
    "TypeScript": {
      "language_servers": ["typescript-language-server"],
      "code_actions_on_format": ["source.organizeImports"],
      "format_on_save": "on"
    },
    "TSX": {
      "language_servers": ["typescript-language-server"],
      "code_actions_on_format": ["source.organizeImports"],
      "format_on_save": "on"
    }
  },
  "lsp": {
    "typescript-language-server": {
      "initialization_options": {
        "preferences": {
          "jsx": "preserve",
          "jsxImportSource": "solid-js"
        },
        "typescript": {
          "preferences": {
            "jsx": "preserve",
            "jsxImportSource": "solid-js"
          }
        }
      }
    }
  },
  "file_types": {
    "JSONC": ["*.secrets.jsonc", "*.local.jsonc", "config.*.jsonc"]
  }
}
