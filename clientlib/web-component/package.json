{
  "name": "@webauthn/web-component",
  "version": "1.0.0",
  "description": "Solid.js web component for WebAuthn authentication",
  "type": "module",
  "main": "dist/webauthn-auth.js",
  "types": "dist/webauthn-auth.d.ts",
  "scripts": {
    "build": "vite build --config vite.wc.config.ts",
    "build:copy": "npm run build && npm run copy",
    "copy": "cp dist/webauthn-auth-standalone.js ../../assets/clientlib/web-component/dist/webauthn-auth-standalone.js",
    "build:standalone": "vite build --config vite.wc.config.ts",
    "dev": "vite dev --config vite.wc.config.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts src/**/*.tsx",
    "lint:fix": "eslint src/**/*.ts src/**/*.tsx --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webauthn",
    "solid-js",
    "web-component",
    "authentication",
    "typescript"
  ],
  "author": "WebAuthn Team",
  "license": "MIT",
  "dependencies": {
    "solid-js": "^1.8.5",
    "zod": "^3.22.4",
    "@webauthn/clientlib": "file:.."
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-solid": "^0.13.1",
    "prettier": "^3.1.0",
    "solid-element": "^1.9.1",
    "typescript": "^5.3.2",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/webauthn-auth.js",
      "types": "./dist/webauthn-auth.d.ts"
    },
    "./standalone": "./dist/webauthn-auth-standalone.js"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "plugins": [
      "@typescript-eslint",
      "prettier",
      "solid"
    ],
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "plugin:solid/recommended",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/explicit-function-return-type": "warn"
    },
    "env": {
      "browser": true,
      "es2022": true
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "jsxSingleQuote": true
  }
}
