{
  "name": "@webauthn/web-component",
  "version": "1.0.0",
  "description": "Solid.js web components for WebAuthn authentication and WebSocket handling",
  "type": "module",
  "main": "dist/all-components.js",
  "types": "dist/all-components.d.ts",
  "scripts": {
    "build": "vite build --config vite.wc.config.ts",
    "build:copy": "npm run build && npm run copy",
    "copy": "cp dist/*.js ../../assets/clientlib/web-component/dist/ && cp dist/*.html ../../assets/clientlib/web-component/dist/",
    "build:standalone": "vite build --config vite.wc.config.ts",
    "dev": "vite dev --config vite.wc.config.ts",
    "clean": "rm -rf dist",
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:fix": "eslint 'src/**/*.{ts,tsx}' --fix",
    "format": "prettier --write src/**/*.{ts,tsx}",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "webauthn",
    "websocket",
    "solid-js",
    "web-component",
    "authentication",
    "realtime",
    "typescript"
  ],
  "author": "WebAuthn Team",
  "license": "MIT",
  "dependencies": {
    "solid-js": "^1.8.5",
    "zod": "^3.22.4",
    "@webauthn/clientlib": "file:.."
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^15.0.0",
    "prettier": "^3.1.0",
    "solid-element": "^1.9.1",
    "typescript": "^5.3.2",
    "vite": "^6.3.5",
    "vite-plugin-solid": "^2.11.6"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/all-components.js",
      "types": "./dist/all-components.d.ts"
    },
    "./webauthn": {
      "import": "./dist/webauthn-auth.js",
      "types": "./dist/webauthn-auth.d.ts"
    },
    "./websocket": {
      "import": "./dist/websocket-components.js",
      "types": "./dist/websocket-components.d.ts"
    },
    "./webauthn/standalone": "./dist/webauthn-auth-standalone.js",
    "./websocket/standalone": "./dist/websocket-components-standalone.js",
    "./standalone": "./dist/all-components-standalone.js"
  },

  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2,
    "jsxSingleQuote": true
  }
}
