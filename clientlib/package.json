{
  "name": "@webauthn/clientlib",
  "version": "1.0.0",
  "description": "TypeScript client library for WebAuthn API with Zod validation and fetch wrappers",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run build:web-component",
    "build:web-component": "cd web-component && npm run build",
    "dev": "tsc --watch",
    "test": "vitest --run",
    "test:unit": "vitest --run unit",
    "test:integration": "vitest --run integration",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest",
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint src/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepublishOnly": "npm run test && npm run lint"
  },
  "keywords": [
    "webauthn",
    "typescript",
    "api-client",
    "zod",
    "fetch",
    "authentication"
  ],
  "author": "WebAuthn Team",
  "license": "MIT",
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.9.0",
    "@typescript-eslint/eslint-plugin": "^8.34.1",
    "@typescript-eslint/parser": "^8.34.1",
    "@vitest/coverage-v8": "^1.6.1",
    "eslint": "^9.29.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-vitest": "^0.3.10",
    "eslint-plugin-vitest-globals": "^1.5.0",
    "globals": "^16.2.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2",
    "vitest": "^1.6.1"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/webauthn-tutorial.git",
    "directory": "clientlib"
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  }
}
